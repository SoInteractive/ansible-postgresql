[Unit]
Description=Runners to orchestrate a high-availability PostgreSQL
After=syslog.target network.target

[Service]
Type=simple

User={{ ansible_user }}
Group={{ ansible_user }}

ExecStart={{ patroni_location }} /etc/patroni.yml

Restart=always

KillMode=process

TimeoutSec=30

Restart=no

[Install]
WantedBy=multi-user.targ
